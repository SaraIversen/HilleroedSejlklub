@page
@model Razor.Pages.Boats.BoatReparationModel
@{
    ViewData["Title"] = "Meld til reparation";
}

@{
    if (!string.IsNullOrEmpty(@Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"><span aria-hidden="true"></span></button>
            <strong>Warning!</strong> @Model.ErrorMessage
        </div>
    }
}

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.BoatReparation.Boat.Id" class="control-label"></label>
        <input asp-for="@Model.BoatReparation.Boat.Id" readonly class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.BoatReparation.Boat.Name" class="control-label"></label>
        <input asp-for="@Model.BoatReparation.Boat.Name" readonly class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.BoatReparation.Boat.Measurement" class="control-label"></label>
        <input asp-for="@Model.BoatReparation.Boat.Measurement" readonly class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.BoatReparation.Boat.Engine" class="control-label"></label>
        <input asp-for="@Model.BoatReparation.Boat.Engine" readonly class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.BoatReparation.Boat.BuildYear" class="control-label"></label>
        <input asp-for="@Model.BoatReparation.Boat.BuildYear" readonly class="form-control" />
    </div>
    <div class="form-group">
        <label>Kommentar:</label><br>
        <input asp-for="@Model.BoatReparation.Comment" class="form-control" />
    </div>
    <div class="formgroup">
        <input type="submit" value="Meld til reparation" class="btn btn-primary" />
    </div>
</form>