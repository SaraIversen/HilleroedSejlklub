@page
@using SejlklubLibrary.Models
@model Razor.Pages.Boats.MaintenanceLogModel
@{
    ViewData["Title"] = "Vedligholdelsesliste";
}
<h1>Både meldt til reparation:</h1>

<hr />
<p>Antal meldte både: @Model._repairList.Count</p>
<table style="width:85%" class="table">
    <thead style="background-color:lightskyblue;border-radius:60px">
        <tr>
            <td>ID</td>
            <td>Navn</td>
            <td>Båd Type</td>
            <td>Mål</td>
            <td>Motor</td>
            <td>Bygningsår</td>
            <td>Kommentar</td>
            <td></td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (BoatReparation boats in Model._repairList)
        {
            <tr>
                <td style="background-color:lightgray;text-align:center">@boats.Boat.Id</td>
                <td>@boats.Boat.Name</td>
                <td>@boats.Boat.BoatType</td>
                <td>@boats.Boat.Measurement</td>
                <td>@boats.Boat.Engine</td>
                <td>@boats.Boat.BuildYear</td>
                <td>@boats.Comment</td>
            </tr>
        }
    </tbody>
</table>