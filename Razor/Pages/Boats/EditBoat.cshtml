@page
@model Razor.Pages.Boats.EditBoatModel
@{
    ViewData["Title"] = "Opdater båd";
}

@{
    if (!string.IsNullOrEmpty(@Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"><span aria-hidden="true"></span></button>
            <strong>Warning!</strong> @Model.ErrorMessage
        </div>
    }
}
<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Boat.Id" class="control-label"></label>
        <input asp-for="@Model.Boat.Id" readonly class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Boat.Name" class="control-label"></label>
        <input asp-for="@Model.Boat.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Boat.Measurement" class="control-label"></label>
        <input asp-for="@Model.Boat.Measurement" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Boat.Engine" class="control-label"></label>
        <input asp-for="@Model.Boat.Engine" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Boat.BuildYear" class="control-label"></label>
        <input asp-for="@Model.Boat.BuildYear" readonly class="form-control" />
    </div>
    <div class="formgroup">
        <input type="submit" value="Edit Boat" class="btn btn-primary" />
    </div>
</form>