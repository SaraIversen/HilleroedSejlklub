@page
@model Razor.Pages.Boats.AddBoatModel
@{
    ViewData["Title"] = "Add Boat";
}

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Boat.Name" class="control-label"></label>
        <input asp-for="@Model.Boat.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Vælg Båd Type</label>
        <select id="ChosenBoatType" name="ChosenBoatType" asp-for="@Model.ChosenBoatType" asp-items="@Model.BoatTypeSelectList">

        </select>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Boat.Measurement" class="control-label"></label>
        <input asp-for="@Model.Boat.Measurement" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Boat.Engine" class="control-label"></label>
        <input asp-for="@Model.Boat.Engine" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Boat.BuildYear" class="control-label"></label>
        <input asp-for="@Model.Boat.BuildYear" class="form-control" />
    </div>
    <div class="formgroup">
        <input type="submit" value="Create Customer" class="btn btn-primary" />
    </div>
</form>